CREATE TABLE Student_Details(
   S_ID VARCHAR(10) PRIMARY KEY,
   Student_Name CHAR(50) NOT NULL,
   Father_Name CHAR(50) NOT NULL,
   Mother_Name CHAR(50) NOT NULL,
   Age INTEGER NOT NULL,
   Contact_Number NUMERIC(10) NOT NULL CHECK (LENGTH(Contact_Number) = 10),
   Email_Address VARCHAR(50) NOT NULL CHECK (Email_Address LIKE '%@%'),
   Aadhar_Number NUMERIC(12) UNIQUE NOT NULL CHECK (LENGTH(Aadhar_Number) = 12)
);

CREATE TABLE Payment_Details(
   Transaction_ID VARCHAR(20) PRIMARY KEY,
   S_ID VARCHAR(10) NOT NULL,
   Amount INTEGER NOT NULL,
   Discount_Percentage INTEGER,
   Date_Time TIMESTAMP,
   FOREIGN KEY (S_ID) REFERENCES Student_Details(S_ID)
);

CREATE TABLE Login_Details(
   S_ID VARCHAR(10) NOT NULL,
   Password VARCHAR(20) NOT NULL CHECK (LENGTH(Password) >= 8),
   Email_Address VARCHAR(50) NOT NULL,
   FOREIGN KEY (S_ID) REFERENCES Student_Details(S_ID),
   PRIMARY KEY (S_ID, Email_Address)
);

CREATE TABLE Student_Address(
   S_ID VARCHAR(10) PRIMARY KEY,
   Area VARCHAR(100),
   District VARCHAR(20),
   State VARCHAR(20),
   Pin_Code INTEGER,
   FOREIGN KEY (S_ID) REFERENCES Student_Details(S_ID)
);

CREATE TABLE COURSES(
   Course_ID VARCHAR(20) PRIMARY KEY,
   Course_Name VARCHAR(30) NOT NULL UNIQUE,
   Target_Audience VARCHAR(20) NOT NULL,
   Price NUMERIC(10) NOT NULL,
   Total_Teaching_Hours INTEGER NOT NULL,
   Course_StartDate DATE NOT NULL,
   Course_EndDate DATE NOT NULL
);

CREATE TABLE FACULTY(
   Teacher_ID VARCHAR(10) PRIMARY KEY,
   Teacher_Name VARCHAR(30),
   Subject VARCHAR(20),
   Experience INTEGER,
   Email_Address VARCHAR(50) NOT NULL CHECK (Email_Address LIKE '%@%'),
   Contact_Number NUMERIC(10) NOT NULL CHECK (LENGTH(Contact_Number) = 10)
);